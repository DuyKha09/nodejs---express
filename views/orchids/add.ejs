<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Orchid</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/orchids">Dashboard</a></li>
                    <li class="breadcrumb-item active">New Orchid</li>
                </ol>
            </nav>
        </div>
        <div class="col text-end fw-lighter">
            <b></b>
        </div>
    </div>
</div>

<form action="/orchids" method="POST">
    <div class="row form-group mb-4">
        <div class="col">
            <label for="name">Orchid's Name</label>
            <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                value=""
                placeholder="name"
                required
            />
        </div>

        <div class="col">
            <label for="image">Image</label>
            <input
                type="text"
                class="form-control"
                id="image"
                name="image"
                value=""
                placeholder="image"
                required
            />
        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
            <label for="price">Price</label>
            <input
                type="number"
                min="0"
                class="form-control"
                id="price"
                name="price"
                value=""
                placeholder="price"
                required
            />
        </div>

        <div class="col">
            <label for="country">Country</label>
            <select
                class="form-control"
                id="country"
                name="country"
                required
            ></select>
        </div>

        <div class="col">
            <label for="color">Color</label>
            <input
                type="text"
                class="form-control"
                id="color"
                name="color"
                value=""
                placeholder="color"
                required
            />
        </div>
        <div class="col">
            <label>Is Natural:</label>
            <div class="form-check">
                <input
                    type="radio"
                    class="form-check-input"
                    id="trueRadio"
                    name="isNatural"
                    value="true"
                />
                <label class="form-check-label" for="trueRadio">True</label>
            </div>
            <div class="form-check">
                <input
                    type="radio"
                    class="form-check-input"
                    id="falseRadio"
                    name="isNatural"
                    value="false"
                />
                <label class="form-check-label" for="falseRadio">False</label>
            </div>
        </div>
    </div>

    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Add Orchid</button>
        <a href="/orchids" class="btn btn-secondary">Close</a>
    </div>
</form>

<!-- Include country-list library -->
<script src="/path/to/country.min.js"></script>
<script>
    // Populate country dropdown
    var countryList = new CountryList();
    var countries = countryList.getNames();
    var select = document.getElementById("country");
    for (var i = 0; i < countries.length; i++) {
        var option = document.createElement("option");
        option.text = countries[i];
        select.add(option);
    }
</script>

</body>
</html>
